{
  "branches": [
    {
      "name": "main"
    },
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "docker build -t edgenetwork-operator/edgenetwork-operator -f Dockerfile ."
      }
    ],
    [
      "@eclass/semantic-release-docker",
      {
        "baseImageName": "edgenetwork-operator/edgenetwork-operator",
        "registries": [
          {
            "url": "ghcr.io",
            "imageName": "ghcr.io/edgefarm/edgenetwork-operator/edgenetwork-operator",
            "user": "GITHUB_USER",
            "password": "GITHUB_TOKEN"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i \"s/ghcr.io/edgefarm/edgenetwork-operator/controller:.*/ghcr.io/edgefarm/edgenetwork-operator/controller:${nextRelease.version}/g\" manifests/controller.yaml"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "manifests/controller.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/github"
  ]
}